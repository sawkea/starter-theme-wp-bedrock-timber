
		<div class="card-columns">
			<div class="card">
				<div class="tease tease-{{post.post_type}}" id="tease-{{post.ID}}">
									
					{% if post.get_thumbnail %}
						<img src="{{post.thumbnail.src}}" class="card-img-top"/>
					{% endif %}

					<div class="card-body">
						<h5 class="card-title">{{post.title}}</h5>
						<p class="card-text">{{post.preview}}</p>
						<a href="{{post.link}}" class="btn btn-primary">Lire plus</a>
					</div>
				</div>
			</div>
		</div>


		